@model IEnumerable<Online_Shop.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class=" row">
    <div class=" col-lg-12 grid-margin stretch-card">
        <div class=" card">
            <div class=" card-body">
                <h2>Orders</h2>
                <table class=" table table-hover">
                    <tr>

                        <th>Customer</th>
                        <th>Phone Number</th>
                        <th>Place of Receipt</th>
                        <th>Payment Method</th>
                        <th>Total Price</th>
                        <th>Promotion</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th> Actions</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>


                            <td>
                                @Html.DisplayFor(modelItem => item.Customer_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone_number)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Place_of_receipt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Payment_method)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total_Price)
                            </td>
                            <td>
                                @if (item.Promotion == null)
                                {
                                    <em><b>None</b></em>
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.Promotion.Name)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created_date)
                            </td>
                            <td>
                                @using (Html.BeginForm("ChangeStatus", "Order", new { id = item.Id }, FormMethod.Post))
                                {

                                    @Html.DropDownList("Status", new List<SelectListItem>() {
                                   new SelectListItem { Selected = false, Text = "Pending", Value = "Pending"},
                                   new SelectListItem { Selected = false, Text = "Delivering", Value = "Delivering" },
                                   new SelectListItem { Selected = false, Text = "Complete", Value = "Complete" }
                               }, "---"+ item.Status+"---",
                                    new { @class = "form-control", @onchange = "this.form.submit()&&document.location.reload(false)" , style = "border:1px solid black" })
                                }
                            <td>
                                <button type="button" class="btn btn-inverse-primary">@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @Style = "display : inline" })</button>
                                <button type="button" class="btn btn-inverse-primary">@Html.ActionLink("Detail", "Detail", new { id = item.Id }, new { @Style = "display : inline" })</button>
                                @using (Html.BeginForm("Delete", "User", new { id = item.Id }, FormMethod.Post, new { @Style = "display : inline", onclick = "return confirm('Are you sure you wish to delete this user?');" }))
                                {
                                    @Html.AntiForgeryToken();
                                    <button type="submit" class=" btn btn-inverse-danger">Delete</button>
                                }
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>