@model Online_Shop.Models.DTO.Password_User
@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class=" row">
    <div class=" col-lg-12 grid-margin stretch-card">
        <div class=" card">
            <div class=" card-body">
                <h2>Update Password</h2>
                <hr />
                @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.User_Id)
                        @Html.HiddenFor(model => model.CurrentPassword)
                        <div class="form-group">
                            <label  class="control-label col-md-2">Current Password</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.CurrentPasswordInput, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name", type = "password" } })
                                @Html.ValidationMessageFor(model => model.CurrentPasswordInput, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="control-label col-md-2"> New Password</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name", type = "password" } })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="control-label col-md-2">Confirm New Password</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ReNewPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name", type = "password" } })
                                @Html.ValidationMessageFor(model => model.ReNewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <input type="submit" value="Save" class="btn btn-inverse-primary">
                    </div>

                }
            </div>
        </div>
    </div>
</div>
