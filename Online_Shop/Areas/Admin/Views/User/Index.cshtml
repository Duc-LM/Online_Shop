@model Online_Shop.Models.DTO.UsersRoles

@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Avatar</th>
        <th>Name</th>
        <th>User Name</th>
        <th>Date of birth</th>
        <th>Gender</th>
        <th>Email</th>
        <th>Address</th>
        <th>Role</th>

        <th>Action</th>
    </tr>

    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @{
                    var image = Path.Combine("/Include/Images/", item.Avatar);
                }
                <img src="@image" width="200" height="200" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @if (item.Gender == 1)
                {
                    <p>Male</p>
                }
                else
                {
                    <p>Female</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DropDownList("Role",new SelectList(Model.Roles,"Id","Name"),
                                     new { @onchange = "ChangeRole(this.value)", @id = "Role", @value = item.Role.Name})
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
