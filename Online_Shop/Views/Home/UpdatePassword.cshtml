@model Online_Shop.Models.DTO.Password_User
@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="/Home"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Update Password</li>
        </ol>
    </div>
</div>
<div class="login">
    <div class="container">
        <h2>Update Password</h2>
        <hr />
        @using (Html.BeginForm("UpdatePassword", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class=" col-md-2">Current Password</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CurrentPasswordInput,"Current Password", new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name", type = "password" } })
                    @Html.ValidationMessageFor(model => model.CurrentPasswordInput, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class=" col-md-2"> New Password</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NewPassword,"New Password", new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name", type = "password" } })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class=" col-md-2">Confirm  Password</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.ReNewPassword,"Confirm New Password", new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name", type = "password" } })
                    @Html.ValidationMessageFor(model => model.ReNewPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <input type="submit" value="Save" class="btn btn-primary">
            @Html.HiddenFor(model => model.User_Id)
            @Html.HiddenFor(model => model.CurrentPassword)
        </div>

        }
    </div>
</div>

